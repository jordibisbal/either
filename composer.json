{
    "name": "j45l/either-php",
    "description": "Either for PHP",
    "version": "0.1",
    "keywords": [
        "optional", "option", "either", "maybe"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jordi Bisbal",
            "email": "jordi.bisbal+j45l@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1|~8"
    },
    "require-dev": {
        "slevomat/coding-standard": "^7.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "~3.0",
        "friendsofphp/php-cs-fixer": "~3.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "infection/infection": "^0.23.0",
        "phpunit/phpunit": "^9.5",
        "phpmd/phpmd": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "j45l\\either\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "j45l\\either\\Test\\": "tests"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "coding-style": "vendor/bin/phpcs && vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php_cs.dist",
        "clear": "rm -rf vendor/"
    }
}
